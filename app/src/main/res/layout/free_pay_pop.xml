<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margintop"
        android:layout_gravity="center"
        android:gravity="center"
        >
        <LinearLayout
            android:id="@+id/leftpop"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:padding="@dimen/margintop"
            android:gravity="left"
            android:background="@drawable/button_click"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/freedrink"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_click"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seeadtodrink"
                />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/rightpop"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_toRightOf="@id/leftpop"
            android:padding="@dimen/margintop"
            android:gravity="left"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_click_green"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/paydrink"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_click"
                />

        </LinearLayout>



    </RelativeLayout>


</LinearLayout>