<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/rightoperate"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hotwater"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/hotwater"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/red"
            />

        <TextView
            android:id="@+id/warmwater"
            android:background="@drawable/wenshui"
            android:layout_width="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/coolwater"
            android:background="@drawable/coolwater"
            android:layout_width="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            />


        <TextView
            android:id="@+id/dixieccup"
            android:background="@drawable/getcup"
            android:layout_width="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            />


    </LinearLayout>


</LinearLayout>