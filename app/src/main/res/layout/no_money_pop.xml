<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:layout_gravity="center"
    android:gravity="center"
    >


    <ImageView
        android:id="@+id/lefterrorico"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/sorrypng"
        />


    <ImageView
        android:id="@+id/middleico"
        android:layout_toRightOf="@+id/lefterrorico"
        android:layout_width="100dp"
        android:layout_height="100dp"
        />

    <TextView
        android:id="@+id/accountnomoney"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="@string/accoutnomoney"
        android:textColor="@color/red"
        android:layout_toRightOf="@+id/middleico"
        />


    <TextView
        android:id="@+id/tobuy"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="@string/tobuy"
        android:textColor="@color/red"
        android:layout_toRightOf="@+id/middleico"
        android:layout_below="@+id/accountnomoney"
        />







</RelativeLayout>